cpp_compiler?=gcc
linker?=gcc
config?=debug
build_dir:=build/${config}
flags:= -Isrc -std=c++1z -Wall -Wno-error=unused-function -Wfloat-conversion -Wsign-conversion -Wimplicit-fallthrough -Werror -MMD
gtest_dir:= googletest/googletest
gtest_flags:=-isystem ${gtest_dir}/include -I${gtest_dir}
link_flags:=-lstdc++ -lm -pthread -lblas -llapacke
ifeq ($(config), release)
  flags += -g -O3 -DNDEBUG -Wno-error=unused-variable
  link_flags += -g -O3
else
  ifeq ($(config), profile)
    flags += -g -O3 -pg -no-pie -DNDEBUG -Wno-error=unused-variable
    link_flags += -g -O3 -no-pie
  else
    ifeq ($(config), coverage)
      flags += -g -ftest-coverage -fprofile-arcs
      link_flags += -g -fprofile-arcs
    else
      ifeq ($(config), debug)
        flags += -g
        link_flags += -g
      else
$(error Unknown config: $(config))
      endif
    endif
  endif
endif


.PHONY: all lib utest exp clean
utest: ${build_dir}/utest
exp: ${build_dir}/exp
lib: ${build_dir}/libsanity.a
all: lib utest exp
clean:
	rm -rf build

